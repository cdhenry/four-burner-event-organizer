<h2> <%= @event.name %> (<%= @event.date %>)</h2>
<h3> <%= @event.description %> </h3>

<p><% @event.burners.each do |burner| %>
  | <a href="/burners/<%= burner.slug %>"><%= burner.name %> </a>
<% end %> |</p>

<p> Duration: <%=@event.duration%> hrs </p>

<a href="/events/<%=@event.id%>/edit">Edit Event</a><br><br>

<form method="post" action="/events/<%=@event.id%>/delete">
  <input id="hidden" type="hidden" name="_method" value="DELETE">
  <input type="submit" value="Delete Event">
</form>
