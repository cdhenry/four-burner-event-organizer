<h1>Edit <%= @event.name %></h1>

<form action="/events/<%= @event.id %>" method="POST">
  <input type="hidden" name="_method" value="PATCH">
  <label for="name">Name</label>
  <input type="text" name="event[name]" id="name" value="<%= @event.name %>"><br>

  <input type="checkbox" name="public" <%='checked' if @event.public%>>Public</input><br><br>

  <label> Event Description </label><br>
  <textarea type="text" name="description" value="<%= @event.description %>"> </textarea><br><br>

  <label> Choose an Event Type </label><br>
  <% EventType.all.each do |event_type| %>
    <input type="checkbox" name="event_type_ids[]" value="<%= event_type.id %>" <%='checked' if @event.event_types.include?(event_type) %>><%=event_type.name%></input>
  <% end %><br><br>

  <label> Or Create a New Event Type </label><br>

  <label> Event Type: </label>
  <input type="text" name="event_type[name]" id="event_type_name"></input><br>

  <input type="submit" value="Save">
</form>
