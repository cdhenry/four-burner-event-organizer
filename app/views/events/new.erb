<h1>Add a New Event</h1>

<form action="/events" method="POST">
  <label> Name </label>
  <input type="text" name="name"><br><br>

  <label> Description </label><br>
  <textarea type="text" name="description"> </textarea><br><br>

  <label> Date </label><br>
  <input id="date" type="date" value="<%=Date.today%>"><br><br>

  <table>
    <tr>
      <th>Time Start</th>
      <th>Time Finish</th>
    </tr>
    <tr>
      <td><input id="time" type="time" value="<%=Time.now.hour%>:<%=Time.now.min%>"></td>
      <td><input id="time" type="time" value="<%=Time.now.hour < 23 ? Time.now.hour + 1 : Time.now.hour %>:<%=Time.now.min%>"></td>
    </tr>
  </table>

  <label> Choose a Burner </label><br>
  <% Burner.all.each do |burner| %>
    <input type="checkbox" name="burners[]" value="<%= burner.id %>" id="<%= burner.name %>"> <%=burner.name%></input>
  <% end %><br><br>

  <input type="submit" value="Create">
</form>
